<div class="dtr-responsive-header fixed-top">
    <div class="container"> 
        <%= link_to (image_tag("oneelite-logo.png", alt: "logo-oneelite")) %>
        <button id="dtr-menu-button" class="dtr-hamburger" type="button">
            <span class="dtr-hamburger-lines-wrapper"></span>
            <span class="dtr-hamburger-lines"></span>
        </button>
    </div>
    <div class="dtr-responsive-header-menu"></div>
</div>
    
<header id="dtr-header-global" class="fixed-top bg-white">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between"> 
            
            <div class="dtr-header-left">     
                <%= link_to image_tag("oneelite-logo.png", alt: "logo-oneelite"), root_path, class: "logo-default dtr-scroll-link" %> 
            </div>
            
            <div class="main-navigation navbar navbar-expand-lg ml-auto">
                <ul class="dtr-scrollspy navbar-nav dtr-nav dark-nav-on-load dark-nav-on-scroll navbar-menu">
                    <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link active" %></li>
                    <li class="nav-item"><%= link_to "Fitur", '#feature', class: "nav-link" %></li>
                    <li class="nav-item"><%= link_to "Solusi", '#solusi', class: "nav-link" %></li>
                    <% if logged_in? %>
                        <li class="nav-item">
                            <%= link_to "Users", '#', class: "nav-link" %>
                        </li>
                        <li class="nav-item dropdown">
                            <a href="#" id="account" class="dropdown-toggle nav-link">
                                Account <b class="caret"></b>
                            </a>
                            <ul id="dropdown-menu" class="dropdown-menu">
                                <li><%= link_to "Profile", current_user %></li>
                                <li><%= link_to "Settings", '#' %></li>
                                <li class="divider"></li>
                                <li>
                                    <%= link_to "Log out", logout_path, data: { "turbo-method": :delete } %>
                                </li>
                            </ul>
                        </li>
                    <% else %>
                        <li>
                            <%= link_to "Log in", login_path %>
                        </li>
                    <% end %>
                </ul>
            </div>
            
            <div class="dtr-header-right">
                <%= link_to "Daftar", signup_path, class: " dtr-btn-flat btn-flat-green  dtr-scroll-link dtr-px-50" %> 
            </div>
            
        </div>
    </div>
</header>