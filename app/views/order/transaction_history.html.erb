<h1>List of transactions</h1>

<% if transactions.length > 0 %>
  <ul>
    <% transactions.each_with_index do |transaction, index| %>
      <li><%= index + 1 %></li>
      <li><%= transaction.delivery_courier.user.nama %></li>
      <li><%= transaction.waste.jenis_sampah %></li>
      <li><%= transaction.waste.berat %></li>
      <li><%= transaction.waste.gambar %></li>
      <li><%= transaction.waste.alamat_penjemputan %></li>
      <li><%= transaction.nominal_dibayar %></li>
      <li><%= transaction.status %></li>
    <% end %>
  </ul>
<% else %>
  <p>kosong</p>
<% end %>
